<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="other_settings" sortOrder="30">
        <fieldset name="head">
            <field name="head_shortcut_icon" formElement="imageUploader">
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png webp ico apng</allowedExtensions>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
        </fieldset>
        <fieldset name="header">
            <field name="header_logo_src" formElement="imageUploader">
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png webp</allowedExtensions>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
        </fieldset>
        <fieldset name="watermark">
            <fieldset name="image" sortOrder="10">
                <field name="watermark_image_image" formElement="imageUploader">
                    <formElements>
                        <imageUploader>
                            <settings>
                                <allowedExtensions>jpg jpeg gif png webp</allowedExtensions>
                            </settings>
                        </imageUploader>
                    </formElements>
                </field>
            </fieldset>
            <fieldset name="thumbnail" sortOrder="20">
                <field name="watermark_thumbnail_image" formElement="imageUploader">
                    <formElements>
                        <imageUploader>
                            <settings>
                                <allowedExtensions>jpg jpeg gif png webp</allowedExtensions>
                            </settings>
                        </imageUploader>
                    </formElements>
                </field>
            </fieldset>
            <fieldset name="small_image" sortOrder="30">
                <field name="watermark_small_image_image" formElement="imageUploader">
                    <formElements>
                        <imageUploader>
                            <settings>
                                <allowedExtensions>jpg jpeg gif png webp</allowedExtensions>
                            </settings>
                        </imageUploader>
                    </formElements>
                </field>
            </fieldset>
        </fieldset>
    </fieldset>
</form>
